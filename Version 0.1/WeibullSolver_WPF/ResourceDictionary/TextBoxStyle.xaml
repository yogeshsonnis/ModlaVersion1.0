<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:WeibullSolver_WPF.ResourceDictionary">
    
    <Style TargetType="{x:Type TextBox}">
        <Setter Property="Background"
                Value="{DynamicResource MaingridBaground}" />
        <Setter Property="BorderBrush"
                Value="{DynamicResource GridTextboxBorder}" />
        <Setter Property="FontFamily"
                Value="{DynamicResource MainFontFamily}" />
        <Setter Property="Height"
                Value="25" />

        <Setter Property="Foreground"
                Value="{DynamicResource  TextblockForegroungColor}" />
        <Setter Property="FocusVisualStyle"
                Value="{x:Null}" />
    </Style>

</ResourceDictionary>